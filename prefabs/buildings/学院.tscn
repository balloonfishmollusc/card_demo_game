script/source = "extends Building

func curr_value():
	var X = self.level
	var Y = 1.0
	match self.get_terrain():
		Q.Terrain.FLATLANDS: Y = 1.5;
		Q.Terrain.MOUNTAIN: Y = 0.5;
		Q.Terrain.OCEAN: Y = 0.0;
		Q.Terrain.PORT: Y = 0.9;
		Q.Terrain.DESERT: Y = 0;
	return X*Y*5

func _on_round_end(i):
	Q.get_p1().add_tech_points(curr_value())

func get_desc():
	var s = .get_desc()
	return s + '\\n' + '下回合获取 %d 科技点' % curr_value()
