script/source = "extends Building

func curr_value():
	var X = self.level
	var Y = 1.0
	match self.get_terrain():
		Q.Terrain.FLATLANDS: Y = 1.0;
		Q.Terrain.MOUNTAIN: Y = 0.2;
		Q.Terrain.OCEAN: Y = 2.0;
		Q.Terrain.PORT: Y = 2.0;
		Q.Terrain.DESERT: Y = 0.0;
	var Z = self.working_rounds
	return max(Y*X*30-Z*5, -10)
	
	
func _on_round_end(i):
	Q.get_p1().cowries += curr_value()
	
func get_desc():
	var s = .get_desc()
	return s + '\\n' + '下回合获取 %d 贝壳' % curr_value()
"

